# Configurações do Ambiente
ENVIRONMENT=development  # development, testing, production

# Configurações do Banco de Dados
# Use conexões seguras com SSL em produção
DATABASE_URL=sqlite:///./aurora.db
TEST_DATABASE_URL=sqlite:///./test.db

# Para PostgreSQL com SSL, use:
# DATABASE_URL=postgresql://usuario:senha@localhost:5432/aurora?sslmode=require
# TEST_DATABASE_URL=postgresql://usuario:senha@localhost:5432/aurora_test?sslmode=require

# Configurações da API CNPJ
CNPJA_API_URL=https://api.cnpja.com/v1
CNPJA_AUTH_TYPE=Bearer
CNPJA_API_KEY=sua_chave_api_aqui

# Configurações de Segurança JWT
# IMPORTANTE: Gere uma chave forte e única para produção
# Você pode usar: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=chave_secreta_para_jwt_min_32_caracteres_altamente_segura_e_aleatoria
ALGORITHM=HS256  # HS256 ou RS256 recomendados
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Configurações de SSL/TLS para HTTPS
# Obrigatório em produção
SSL_KEYFILE=./certs/key.pem
SSL_CERTFILE=./certs/cert.pem
SSL_CA_CERTS=./certs/ca.pem  # Opcional: certificados CA para validação

# Configurações do Redis
# Use conexão segura com SSL e senha em produção
REDIS_URL=redis://localhost:6379/0
# REDIS_URL=rediss://:senha_forte@localhost:6379/0  # Redis com SSL e senha

# Configurações do Azure Key Vault
AZURE_KEY_VAULT_URI=https://seu-keyvault.vault.azure.net/
AZURE_CLIENT_ID=seu_client_id  # Para autenticação com Azure AD
AZURE_CLIENT_SECRET=seu_client_secret
AZURE_TENANT_ID=seu_tenant_id

# Configurações do Servidor
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=False  # Defina como False em produção
LOG_LEVEL=info  # debug, info, warning, error, critical

# Configurações de Segurança Adicionais
# Lista de origens permitidas para CORS, separadas por vírgula
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://aurora-crm.example.com
CORS_ALLOW_CREDENTIALS=true
CORS_EXPOSE_HEADERS=X-Request-ID

# Limite de requisições por minuto por IP
RATE_LIMIT_PER_MINUTE=60

# Configurações de proteção contra força bruta
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME_MINUTES=30

# Configurações de cookies
COOKIE_SECURE=true  # Requer HTTPS
COOKIE_HTTPONLY=true  # Não acessível via JavaScript
COOKIE_SAMESITE=strict  # Restringe envio de cookies em requisições cross-site

# Configurações de segurança de conteúdo
CONTENT_SECURITY_POLICY="default-src 'self'; script-src 'self'; style-src 'self'; img-src 'self' data:; font-src 'self'; connect-src 'self'"

# Configurações de proxy
TRUSTED_PROXIES=127.0.0.1,10.0.0.0/8

# Configurações de monitoramento
ENABLE_METRICS=true
METRICS_PORT=9090